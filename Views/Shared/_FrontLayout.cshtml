<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sr. Software Engineer | .NET Architect | PHP - Jaipur</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Fira+Code:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/landing/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top custom-navbar">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Landing" asp-action="Welcome">
                    <img src="/img/logo.png" class="img-fluid rounded-circle shadow-lg about-img2" alt="Rohit Jain - Senior Software Engineer" style="
                        max-width: 40px;
                        max-height: 40px;" />

                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                                <a class="nav-link btn btn-sm ms-lg-3 px-3 " asp-area="" asp-controller="Landing" asp-action="Welcome">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-sm ms-lg-3 px-3 active" asp-area="" asp-controller="Blogs" asp-action="Index">Blogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-sm ms-lg-3 px-3 active" asp-area="" asp-controller="Landing" asp-action="Portfolio">Portfolio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary btn-sm ms-lg-3 px-3" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                    </ul>
                    <partial name="_FrontLoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <button type="button" class="btn btn-primary btn-lg rounded-circle shadow-lg" id="btn-back-to-top" style="display: none; position: fixed; bottom: 20px; right: 20px; z-index: 1000;">
        <i class="bi bi-arrow-up"></i>
    </button>

    <footer class="border-top footer text-muted custom-footer py-4">
        <div class="container text-center text-lg-start">
            <div class="row">
                <div class="col-lg-6 mb-3 mb-lg-0 text-white">
                    &copy; @DateTime.Now.Year - Rohit Jain All Rights Reserved.
                    <p class="small text-muted mt-2">Crafting digital experiences from Jaipur, India.</p>
                </div>
                <div class="col-lg-6 text-lg-end text-center">
                    <a href="#" class="text-white me-3"><i class="bi bi-linkedin fs-4"></i></a>
                    <a href="#" class="text-white me-3"><i class="bi bi-github fs-4"></i></a>
                    <a href="#" class="text-white me-3"><i class="bi bi-twitter fs-4"></i></a>
                    <a href="#" class="text-white"><i class="bi bi-envelope fs-4"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <script src="~/js/landing/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>