@{
    Layout = "_Layout";
    ViewData["Title"] = "Rohit Jain Development & Architecture ";
}

@model IEnumerable<MvcCoreIdentityDemo.Controllers.LandingController.RouteInfo>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">Application Routing Table</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>URL Pattern</th>
                        <th>Controller</th>
                        <th>Action</th>
                        <th>Internal Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var route in Model)
                    {
                        <tr>
                            <td><code>/@route.Pattern</code></td>
                            <td><span class="badge bg-info text-dark">@route.ControllerName</span></td>
                            <td><span class="badge bg-secondary">@route.ActionName</span></td>
                            <td class="small text-muted">@route.DisplayName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>