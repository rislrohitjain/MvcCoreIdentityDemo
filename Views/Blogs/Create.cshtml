@model MvcCoreIdentityDemo.ViewModels.BlogCreateViewModel

<div class="container mt-4">
    <h2>Post a New Blog</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Summary" class="form-label"></label>
                    <input asp-for="Summary" class="form-control" maxlength="200" required />
                    <small class="text-muted">A short hook for the list page.</small>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="10" required></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Blog Gallery (Upload Multiple Images)</label>
                    <input type="file" name="GalleryImages" class="form-control" multiple accept="image/*" />
                </div>

                <button type="submit" class="btn btn-primary">Publish Blog</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>